{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@zomato/ui": [
        "../../packages/ui/src"
      ],
      "@zomato/shared-types": [
        "../../packages/shared-types/src"
      ],
      "@zomato/shared-utils": [
        "../../packages/shared-utils/src"
      ],
      "@zomato/design-tokens": [
        "../../packages/design-tokens/src"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}